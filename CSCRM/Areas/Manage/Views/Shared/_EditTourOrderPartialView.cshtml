@using CSCRM.Models.ResponseTypes
@using CSCRM.ViewModels.ClientOrdersVM
@model BaseResponse

@{
    EditTourOrderPageMainVm data = Model.Data;
}

<h2 class="EditTourServicePageHead">Edit Tour Order</h2>

<div class="EditTourServiceContainer">
    <h3>Edit Tour Order</h3>
    <span style="color: @(Model.Success ? "green" : "red"); font-weight:600">@Model.Message</span>
    <div class="EditTourService">
        <select id="edit-tourService-tourName" class="EditTourServiceInput">
            <option value="@data.TourOrder.TourId" selected>@data.Tours.FirstOrDefault(testc => testc.Id == data.TourOrder.TourId).Name</option>
            @foreach (var tour in data.Tours)
            {
                <option value="@tour.Id">@tour.Name</option>
            }
        </select>
        <select id="edit-tourService-carTypeName" class="EditTourServiceInput">
            <option value="@data.TourOrder.CarType" disabled selected>@data.TourOrder.CarType</option>
            @foreach (var car in data.Cars)
            {
                <option value="@car.Name">@car.Name</option>
            }
        </select>
        <select id="edit-tourService-guide" class="EditTourServiceInput">
            @if (data.TourOrder.Guide == true)
            {
                <option value="True" selected>Yes</option>
            }
            else
            {
                <option value="False" selected>No</option>
            }

            <option value="True">Yes</option>
            <option value="False">No</option>
        </select>
        <input value="@data.TourOrder.Date" type="date" id="edit-tourService-tourDate" class="EditTourServiceInput" />
        <button onclick="updateTourService(@data.TourOrder.Id)" class="EditTourServiceBtn EditTourServiceBtnPrimary">Update Service</button>
    </div>
</div>