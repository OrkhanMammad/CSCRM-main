@using CSCRM.Models.ResponseTypes
@using CSCRM.ViewModels.ClientOrdersVM
@model BaseResponse

@{
    List<GetHotelOrdersVM> hotelOrders = Model.Data.HotelOrders;
    List<GetTourOrdersVM> tourOrders = Model.Data.TourOrders;
    List<GetRestaurantOrdersVM> restaurantOrders = Model.Data.RestaurantOrders;
    GetClientOrdersVM clientOrders = Model.Data;
}


<div class="client-services-page-content">
    <div class="client-info">
        <h3>Client Info</h3>
        <div class="client-details">
            <p><strong>Invoice Code:</strong> <span id="clientCode">@clientOrders.InvCode</span></p>
            <p><strong>Mail Code:</strong> <span id="clientCode">@clientOrders.MailCode</span></p>
            <p><strong>Name:</strong> <span id="clientName">@clientOrders.Name</span></p>
            <p><strong>Surname:</strong> <span id="clientSurname">@clientOrders.Surname</span></p>
        </div>
    </div>

    <div class="hotel-service-section">
        <h2>Hotel Orders</h2>

        <div class="services-hotel-services-list">
            <h3>Existing Hotel Orders</h3>
            <table>
                <thead>
                    <tr>
                        <th>Hotel Name</th>
                        <th>Room Type</th>
                        <th>Room Count</th>
                        <th>Days</th>
                        <th>Date From</th>
                        <th>Date To</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach(var hotelOrder in hotelOrders)
                {
                    <tr>
                        <td>@hotelOrder.HotelName</td>
                        <td>@hotelOrder.RoomType</td>
                        <td>@hotelOrder.RoomCount</td>
                        <td>@hotelOrder.Days</td>
                        <td>@hotelOrder.DateFrom</td>
                        <td>@hotelOrder.DateTo</td>
                        <td>
                            <a href="#" class="edit-link">Edit</a>
                            <button class="delete-btn">Delete</button>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>

        <div class="services-hotel-add-new">
            <h3>Add New Hotel Order</h3>
            <div class="hotel-add-form">
                <select id="newHotelName" class="hotel-input">
                    <option value="" disabled selected>Select Hotel</option>
                    <option value="Atlas Hotel">Atlas Hotel</option>
                    <option value="Oasis Resort">Oasis Resort</option>
                    <option value="Sunset Inn">Sunset Inn</option>
                </select>
                <select id="newRoomTypeName" class="hotel-input">
                    <option value="" disabled selected>Select Room Type</option>
                    <option value="Single">Single</option>
                    <option value="Double">Double</option>
                    <option value="Suite">Suite</option>
                </select>
                <input type="number" id="newRoomCount" placeholder="Room Count" class="hotel-input" />
                <input type="number" id="newDays" placeholder="Days" class="hotel-input" />
                <input type="date" id="newDateFrom" class="hotel-input" />
                <input type="date" id="newDateTo" class="hotel-input" />
                <button class="hotel-btn">Add Hotel Service</button>
            </div>
        </div>
    </div>

    <div class="tour-service-section">
        <h2>Tour Orders</h2>

        <div class="services-tour-services-list">
            <h3>Existing Tour Orders</h3>
            <table>
                <thead>
                    <tr>
                        <th>Tour Name</th>
                        <th>Car Type</th>
                        <th>Guide</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var tourOrder in tourOrders)
                    {
                        <tr>
                            <td>@tourOrder.TourName</td>
                            <td>@tourOrder.CarType</td>
                            <td>@tourOrder.Guide</td>
                            <td>@tourOrder.Date</td>
                            <td>
                                <a href="#" class="edit-link">Edit</a>
                                <button class="delete-btn">Delete</button>
                            </td>
                        </tr>
                    }
                    <!-- Existing tour services will be listed here -->
                   
                    <!-- More rows as needed -->
                </tbody>
            </table>
        </div>

        <div class="services-tour-add-new">
            <h3>Add New Tour Order</h3>
            <div class="tour-add-form">
                <select id="newTourName" class="tour-input">
                    <option value="" disabled selected>Select Tour</option>
                    <option value="City Tour">City Tour</option>
                    <option value="Mountain Trip">Mountain Trip</option>
                    <option value="Beach Tour">Beach Tour</option>
                </select>
                <select id="newCarTypeName" class="tour-input">
                    <option value="" disabled selected>Select Car Type</option>
                    <option value="Sedan">Sedan</option>
                    <option value="SUV">SUV</option>
                    <option value="Van">Van</option>
                </select>
                <select id="newGuide" class="tour-input">
                    <option value="" disabled selected>Guide</option>
                    <option value="Yes">Yes</option>
                    <option value="No">No</option>
                </select>
                <input type="date" id="newTourDate" class="tour-input" />
                <button class="tour-btn">Add Tour Service</button>
            </div>
        </div>
    </div>

    <div class="restaurant-service-section">
        <h2>Restaurant Orders</h2>

        <div class="services-restaurant-services-list">
            <h3>Existing Restaurant Orders</h3>
            <table>
                <thead>
                    <tr>
                        <th>Restaurant Name</th>
                        <th>Meal Type</th>
                        <th>Count</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Existing restaurant services will be listed here -->
                    @foreach(var restOrder in restaurantOrders)
                    {
                        <tr>
                            <td>@restOrder.RestaurantName</td>
                            <td>@restOrder.MealType</td>
                            <td>@restOrder.Count</td>
                            <td>@restOrder.Date</td>
                            <td>
                                <a href="#" class="edit-link">Edit</a>
                                <button class="delete-btn">Delete</button>
                            </td>
                        </tr>
                    }
                    
                    <!-- More rows as needed -->
                </tbody>
            </table>
        </div>

        <div class="services-restaurant-add-new">
            <h3>Add New Restaurant Order</h3>
            <div class="restaurant-add-form">
                <select id="newRestaurantName" class="restaurant-input">
                    <option value="" disabled selected>Select Restaurant</option>
                    <option value="La Bella">La Bella</option>
                    <option value="The Steakhouse">The Steakhouse</option>
                    <option value="Seafood Delight">Seafood Delight</option>
                </select>
                <select id="newMealType" class="restaurant-input">
                    <option value="" disabled selected>Select Meal Type</option>
                    <option value="Lunch">Lunch</option>
                    <option value="Dinner">Dinner</option>
                    <option value="Gala Dinner">Gala Dinner</option>
                </select>
                <input type="number" id="newMealCount" placeholder="Count" class="restaurant-input" />
                <input type="date" id="newMealDate" class="restaurant-input" />
                <button class="restaurant-btn">Add Restaurant Service</button>
            </div>
        </div>
    </div>
</div>