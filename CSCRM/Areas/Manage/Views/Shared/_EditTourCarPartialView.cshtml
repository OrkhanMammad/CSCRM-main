@using CSCRM.Models.ResponseTypes
@model ResponseForTourByCarPage

<div class="tourCarType-edit-page-container">
    <h3 class="tourCarType-edit-page-title">Edit Tour Prices By Car Type</h3>
    <span style="color: @(Model.Success ? "green" : "red"); font-weight:600">@Model.Message</span>
    <table class="tourCarType-edit-page-tour-table">
        <thead class="tourCarType-edit-page-tour-thead">
            <tr>
                <th>Tour Name</th>
                @foreach (var car in Model.data.CarIdNameVM)
                {
                    <th>@car.Name</th>
                }
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tourCar in Model.data.TourCarVM)
            {
                <tr>
                    <td>
                        @tourCar.TourName
                    </td>
                    @foreach (var car in Model.data.CarIdNameVM)
                    {
                        <td><input type="number" name="@car.Id" value="@tourCar.CarPrices[car.Name]" min="0" class="tourCarType-edit-page-input" required></td>

                    }

                    <td><button onclick="UpdateTourCar('@tourCar.TourName')" class="tourCarType-edit-page-btn tourCarType-edit-page-btn-primary">Update</button></td>
                </tr>
            }

        </tbody>
    </table>
</div>